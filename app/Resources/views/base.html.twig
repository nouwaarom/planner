<!doctype html>
<html>

<head>
    <meta charset="utf-8">

    <title>{% block title %}Planner{% endblock %}</title>

    {% block stylesheets %}
    <link rel="icon" href="{{ asset('img/turtle-icon.png') }}" type="image/png">

    <link rel="stylesheet" href="{{ asset('css/stylesheet.css') }}">
    {% endblock %}

    {# polymer stuff #}
    <script src={{ asset('vendor/webcomponentsjs/webcomponents.min.js') }}></script>

    <link rel="import" href={{ asset('vendor/font-roboto/roboto.html') }}>
    <link rel="import" href={{ asset('vendor/iron-icons/iron-icons.html') }}>
    <link rel="import" href={{ asset('vendor/iron-flex-layout/classes/iron-flex-layout.html') }}>

    <link rel="import" href={{ asset('vendor/paper-input/paper-input.html') }}>
    <link rel="import" href={{ asset('vendor/paper-shadow/paper-shadow.html') }}>
    <link rel="import" href={{ asset('vendor/paper-button/paper-button.html') }}>
    <link rel="import" href={{ asset('vendor/paper-icon-button/paper-icon-button.html') }}>

    {% block post_head %}{% endblock %}
</head>

<body fullbleed layout vertical>
    {% block body %}{% endblock %}

    {% block javascripts %}{% endblock %}
</body>

</html>
